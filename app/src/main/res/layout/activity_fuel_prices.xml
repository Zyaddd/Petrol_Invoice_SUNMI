<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".activity.ATPLPrintTicketActivity"
    android:orientation="vertical"
    android:layout_weight="6"
    android:background="@color/blue">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="48dp"
            android:layout_marginRight="48dp"
            android:layout_centerVertical="true"
            android:orientation="horizontal">


            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="@font/cairo_regular"
                android:text="َتغيير سعر الوقود"
                android:textColor="@color/white"
                android:textSize="36dp"
                />


        </LinearLayout>
    </RelativeLayout>

    <RelativeLayout
        android:elevation="30dp"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="5"
        android:background="@drawable/card_background">

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <ImageView
                        android:id="@+id/back_btn"
                        android:layout_width="48dp"
                        android:layout_height="48dp"
                        android:src="@drawable/ic_arrow_back_blue_24"
                        android:layout_marginTop="20dp"
                        android:layout_marginStart="28dp"
                        android:elevation="10dp"
                        android:background="@drawable/edit_text_background"/>

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/cairo_regular"
                        android:text="أسعار الوقود"
                        android:textColor="@color/blue"
                        android:textSize="34dp"
                        android:layout_marginEnd="22dp"
                        android:layout_marginTop="20dp"/>
                </LinearLayout>



                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_marginVertical="16dp"
                        android:layout_marginStart="22dp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="ر.س"
                        android:textSize="22dp"
                        android:fontFamily="@font/cairo_regular"
                        android:textColor="@color/blue"/>

                    <EditText
                        android:id="@+id/diesel_price"
                        android:hint="سعر اللتر"
                        android:fontFamily="@font/cairo_regular"
                        android:background="@drawable/edit_text_background"
                        android:elevation="10dp"
                        android:layout_width="120dp"
                        android:layout_height="52dp"
                        android:layout_marginHorizontal="22dp"
                        android:layout_marginVertical="16dp"
                        android:textAlignment="center"
                        android:textColor="@color/blue"
                        android:inputType="numberDecimal"
                        android:maxLength="7"
                        android:paddingHorizontal="12dp"
                        />

                    <TextView
                        android:layout_marginVertical="16dp"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="سعر لتر الديزل"
                        android:textSize="22dp"
                        android:textAlignment="center"
                        android:fontFamily="@font/cairo_regular"
                        android:textColor="@color/blue"/>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_marginVertical="16dp"
                        android:layout_marginStart="22dp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="ر.س"
                        android:textSize="22dp"
                        android:fontFamily="@font/cairo_regular"
                        android:textColor="@color/blue"/>

                    <EditText
                        android:id="@+id/price_91"
                        android:hint="سعر اللتر"
                        android:fontFamily="@font/cairo_regular"
                        android:background="@drawable/edit_text_background"
                        android:elevation="10dp"
                        android:layout_width="120dp"
                        android:layout_height="52dp"
                        android:layout_marginHorizontal="22dp"
                        android:layout_marginVertical="16dp"
                        android:textAlignment="center"
                        android:textColor="@color/blue"
                        android:inputType="numberDecimal"
                        android:maxLength="7"
                        android:paddingHorizontal="12dp"
                        />

                    <TextView
                        android:layout_marginVertical="16dp"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="سعر لتر 91"
                        android:textSize="22dp"
                        android:textAlignment="center"
                        android:fontFamily="@font/cairo_regular"
                        android:textColor="@color/blue"/>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_marginVertical="16dp"
                        android:layout_marginStart="22dp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="ر.س"
                        android:textSize="22dp"
                        android:fontFamily="@font/cairo_regular"
                        android:textColor="@color/blue"/>

                    <EditText
                        android:id="@+id/price_98"
                        android:hint="سعر اللتر"
                        android:fontFamily="@font/cairo_regular"
                        android:background="@drawable/edit_text_background"
                        android:elevation="10dp"
                        android:layout_width="120dp"
                        android:layout_height="52dp"
                        android:layout_marginHorizontal="22dp"
                        android:layout_marginVertical="16dp"
                        android:textAlignment="center"
                        android:textColor="@color/blue"
                        android:inputType="numberDecimal"
                        android:maxLength="7"
                        android:paddingHorizontal="12dp"
                        />

                    <TextView
                        android:layout_marginVertical="16dp"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="سعر لتر 98"
                        android:textSize="22dp"
                        android:textAlignment="center"
                        android:fontFamily="@font/cairo_regular"
                        android:textColor="@color/blue"/>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <TextView
                        android:textStyle="bold"
                        android:layout_marginVertical="16dp"
                        android:layout_marginStart="22dp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="%"
                        android:paddingHorizontal="13dp"
                        android:textSize="22dp"
                        android:fontFamily="@font/cairo_regular"
                        android:textColor="@color/blue"/>

                    <EditText
                        android:id="@+id/tax_percentage"
                        android:hint="نسبة الضريبة"
                        android:fontFamily="@font/cairo_regular"
                        android:background="@drawable/edit_text_background"
                        android:elevation="10dp"
                        android:layout_width="120dp"
                        android:layout_height="52dp"
                        android:layout_marginHorizontal="22dp"
                        android:layout_marginVertical="16dp"
                        android:textAlignment="center"
                        android:textColor="@color/blue"
                        android:inputType="numberDecimal"
                        android:maxLength="7"
                        android:paddingHorizontal="12dp"/>

                    <TextView
                        android:layout_marginVertical="16dp"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="الضريبة المضافة"
                        android:textSize="22dp"
                        android:textAlignment="center"
                        android:fontFamily="@font/cairo_regular"
                        android:textColor="@color/blue"/>
                </LinearLayout>


                //print button
                <Button
                    android:id="@+id/savePrice_Btn"
                    android:layout_width="match_parent"
                    android:layout_height="52dp"
                    android:layout_weight="1"
                    android:fontFamily="@font/cairo_regular"
                    android:text="حفظ الأسعار"
                    android:textColor="@color/white"
                    android:background="@drawable/button_background"
                    android:textSize="22dp"
                    android:layout_marginHorizontal="22dp"
                    android:layout_marginVertical="16dp"
                    android:drawableEnd="@drawable/ic_save_24"
                    android:paddingEnd="80dp"
                    android:paddingStart="80dp"
                    android:elevation="10dp"/>

            </LinearLayout>

        </ScrollView>

    </RelativeLayout>





</LinearLayout>