<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".activity.ATPLPrintTicketActivity"
    android:orientation="vertical"
    android:layout_weight="6"
    android:background="@color/blue">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="48dp"
            android:layout_marginRight="48dp"
            android:layout_centerVertical="true"
            android:orientation="horizontal">


            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="@font/cairo_regular"
                android:text="َمرحباََ"
                android:textColor="@color/white"
                android:textSize="46dp"
                />


        </LinearLayout>
    </RelativeLayout>

    <RelativeLayout
        android:elevation="30dp"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="5"
        android:background="@drawable/card_background">

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <ImageView
                        android:id="@+id/settings_btn"
                        android:layout_width="48dp"
                        android:layout_height="48dp"
                        android:src="@drawable/ic_gear_blue_24"
                        android:layout_marginTop="20dp"
                        android:layout_marginStart="28dp"
                        android:elevation="10dp"
                        android:background="@drawable/edit_text_background"/>

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/cairo_regular"
                        android:text="نوع الوقود"
                        android:textColor="@color/blue"
                        android:textSize="34dp"
                        android:layout_marginEnd="22dp"
                        android:layout_marginTop="20dp"/>
                </LinearLayout>

                <RadioGroup
                    android:id="@+id/radio_group_gasType"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginHorizontal="12dp"
                    android:layout_marginTop="16dp">

                    <RadioButton
                        android:id="@+id/gas_diesel"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="ديزل"
                        android:textSize="26dp"
                        android:fontFamily="@font/cairo_regular"
                        android:textColor="@drawable/radio_text_color"
                        android:padding="16dp"
                        android:layout_weight="1"
                        android:layout_marginHorizontal="16dp"
                        android:button="@android:color/transparent"
                        android:background="@drawable/radio_selector"
                        android:elevation="10dp"
                        android:textAlignment="center"
                        android:layout_marginVertical="16dp"
                        />
                    <RadioButton
                        android:id="@+id/gas_98"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="٩٨"
                        android:textSize="26dp"
                        android:fontFamily="@font/cairo_regular"
                        android:textColor="@drawable/radio_text_color"
                        android:padding="16dp"
                        android:layout_weight="1"
                        android:layout_marginHorizontal="16dp"
                        android:button="@android:color/transparent"
                        android:background="@drawable/radio_selector"
                        android:elevation="10dp"
                        android:textAlignment="center"
                        android:layout_marginVertical="16dp"
                        />
                    <RadioButton
                        android:id="@+id/gas_91"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="٩١"
                        android:textSize="26dp"
                        android:fontFamily="@font/cairo_regular"
                        android:textColor="@drawable/radio_text_color"
                        android:padding="16dp"
                        android:layout_weight="1"
                        android:layout_marginHorizontal="16dp"
                        android:button="@android:color/transparent"
                        android:background="@drawable/radio_selector"
                        android:elevation="10dp"
                        android:textAlignment="center"
                        android:layout_marginVertical="16dp"
                        />
                </RadioGroup>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">


                    <EditText
                        android:id="@+id/litres_amount_editText"
                        android:hint="عدد اللترات"
                        android:fontFamily="@font/cairo_regular"
                        android:background="@drawable/edit_text_background"
                        android:elevation="10dp"
                        android:layout_width="120dp"
                        android:layout_height="52dp"
                        android:layout_marginHorizontal="22dp"
                        android:layout_marginVertical="16dp"
                        android:textAlignment="center"
                        android:textColor="@color/blue"
                        android:inputType="numberDecimal"
                        android:maxLength="7"
                        android:paddingHorizontal="12dp"
                        />
                    <Button
                        android:id="@+id/calculate_btn"
                        android:layout_width="0dp"
                        android:layout_height="52dp"
                        android:layout_weight="1"
                        android:text="احسب"
                        android:fontFamily="@font/cairo_regular"
                        android:textColor="@color/white"
                        android:background="@drawable/button_background"
                        android:textSize="22dp"
                        android:layout_marginVertical="16dp"
                        android:layout_marginEnd="22dp"
                        android:elevation="10dp"/>
                </LinearLayout>

                //results to be printed
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:background="@drawable/edit_text_background"
                    android:elevation="10dp"
                    android:layout_marginHorizontal="22dp">

                    //one line of results
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="0dp"
                        android:orientation="horizontal"
                        android:layout_weight="2"
                        android:layout_marginHorizontal="22dp"
                        android:layout_marginVertical="12dp">

                        <TextView
                            android:id="@+id/gas_type"
                            android:layout_marginHorizontal="22dp"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="-"
                            android:textSize="18dp"
                            android:fontFamily="@font/cairo_regular"
                            android:textColor="@color/blue"
                            android:textAlignment="center"/>

                        <TextView
                            android:layout_weight="1"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:fontFamily="@font/cairo_regular"
                            android:text="نوع الوقود"
                            android:textColor="@color/blue"
                            android:textSize="18dp"
                            tools:ignore="NestedWeights"/>

                    </LinearLayout>

                    //price for 1 liter
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="0dp"
                        android:orientation="horizontal"
                        android:layout_weight="2"
                        android:layout_marginHorizontal="22dp"
                        android:layout_marginVertical="12dp">

                        <TextView
                            android:id="@+id/priceOfOneLiter"
                            android:layout_marginHorizontal="22dp"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="-"
                            android:inputType="text"
                            android:textSize="18dp"
                            android:fontFamily="@font/cairo_regular"
                            android:textColor="@color/blue"
                            android:textAlignment="center"/>

                        <TextView
                            android:layout_weight="1"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:fontFamily="@font/cairo_regular"
                            android:text="سعر اللتر (ر.س)"
                            android:textColor="@color/blue"
                            android:textSize="18dp"
                            tools:ignore="NestedWeights"/>

                    </LinearLayout>

                    //Sum of liters
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="0dp"
                        android:orientation="horizontal"
                        android:layout_weight="2"
                        android:layout_marginHorizontal="22dp"
                        android:layout_marginVertical="12dp">

                        <TextView
                            android:id="@+id/litres_amount_textView"
                            android:layout_marginHorizontal="22dp"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="-"
                            android:textSize="18dp"
                            android:fontFamily="@font/cairo_regular"
                            android:textColor="@color/blue"
                            android:textAlignment="center"/>

                        <TextView
                            android:layout_weight="1"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:fontFamily="@font/cairo_regular"
                            android:text="عدد اللترات"
                            android:textColor="@color/blue"
                            android:textSize="18dp"
                            tools:ignore="NestedWeights"/>

                    </LinearLayout>

                    //price of liters
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="0dp"
                        android:orientation="horizontal"
                        android:layout_weight="2"
                        android:layout_marginHorizontal="22dp"
                        android:layout_marginVertical="12dp">

                        <TextView
                            android:id="@+id/liters_price"
                            android:layout_marginHorizontal="22dp"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="-"
                            android:textSize="18dp"
                            android:fontFamily="@font/cairo_regular"
                            android:textColor="@color/blue"
                            android:textAlignment="center"/>

                        <TextView
                            android:layout_weight="1"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:fontFamily="@font/cairo_regular"
                            android:text="سعر اللترات (ر.س)"
                            android:textColor="@color/blue"
                            android:textSize="18dp"
                            tools:ignore="NestedWeights"/>

                    </LinearLayout>

                    //Tax price
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="0dp"
                        android:orientation="horizontal"
                        android:layout_weight="2"
                        android:layout_marginHorizontal="22dp"
                        android:layout_marginVertical="12dp">

                        <TextView
                            android:id="@+id/taxPerValue_textView"
                            android:layout_marginHorizontal="22dp"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="-"
                            android:textSize="18dp"
                            android:maxLength="4"
                            android:fontFamily="@font/cairo_regular"
                            android:textColor="@color/blue"
                            android:textAlignment="center"/>


                        <TextView
                            android:layout_weight="1"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:fontFamily="@font/cairo_regular"
                            android:text="نسبة الضريبة المضافة (%)"
                            android:textColor="@color/blue"
                            android:textSize="18dp"
                            tools:ignore="NestedWeights"/>


                    </LinearLayout>

                    //Tax price
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="0dp"
                        android:orientation="horizontal"
                        android:layout_weight="2"
                        android:layout_marginHorizontal="22dp"
                        android:layout_marginVertical="12dp">

                        <TextView
                            android:id="@+id/tax_price_textView"
                            android:layout_marginHorizontal="22dp"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="-"
                            android:textSize="18dp"
                            android:maxLength="5"
                            android:fontFamily="@font/cairo_regular"
                            android:textColor="@color/blue"
                            android:textAlignment="center"/>



                        <TextView
                            android:layout_weight="1"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:fontFamily="@font/cairo_regular"
                            android:text="قيمة الضريبة المضافة"
                            android:textColor="@color/blue"
                            android:textSize="18dp"
                            tools:ignore="NestedWeights"/>


                    </LinearLayout>

                    //Total price
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="0dp"
                        android:orientation="horizontal"
                        android:layout_weight="2"
                        android:layout_marginHorizontal="22dp"
                        android:layout_marginVertical="12dp">

                        <TextView
                            android:id="@+id/total_price"
                            android:layout_marginHorizontal="22dp"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="-"
                            android:textSize="18dp"
                            android:fontFamily="@font/cairo_regular"
                            android:textColor="@color/blue"
                            android:textAlignment="center"/>

                        <TextView
                            android:layout_weight="1"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:fontFamily="@font/cairo_regular"
                            android:text="القيمة الإجمالية (ر.س)"
                            android:textColor="@color/blue"
                            android:textSize="18dp"
                            tools:ignore="NestedWeights"/>

                    </LinearLayout>





                </LinearLayout>
                //print button
                <Button
                    android:id="@+id/printBtn"
                    android:layout_width="match_parent"
                    android:layout_height="52dp"
                    android:layout_weight="1"
                    android:text="طباعة الإيصال"
                    android:fontFamily="@font/cairo_regular"
                    android:textColor="@color/white"
                    android:background="@drawable/button_background"
                    android:textSize="22dp"
                    android:layout_marginHorizontal="22dp"
                    android:layout_marginVertical="16dp"
                    android:drawableEnd="@drawable/ic_baseline_local_printshop_24"
                    android:paddingEnd="80dp"
                    android:paddingStart="80dp"
                    android:elevation="10dp"/>

            </LinearLayout>

        </ScrollView>

    </RelativeLayout>





</LinearLayout>